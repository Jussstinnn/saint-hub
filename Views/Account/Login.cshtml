@{
    ViewData["Title"] = "Iniciar sesión";
}
@{
    ViewData["HideLayout"] = true;
}


@section Styles {
    <link rel="stylesheet" href="~/css/Account.css" asp-append-version="true" />
}
<div class="auth-freeze">
<!-- =========================
     LOGIN – DESKTOP
========================== -->
<div class="login-desktop">

    <!-- LEFT -->
    <div class="login-visual">
        <div class="login-visual-content">

            <div class="login-brand">
                
            </div>

            <div class="login-claim">
                <h2>Excelencia <span>En Cada Paso.</span></h2>
                <h1>Experimenta la página creada para <span>El Streetwear</span></h1>
            </div>

        </div>
    </div>

    <!-- RIGHT / FORM -->
    <div class="login-panel">

        <div class="account-head">
            <h1>Bienvenido</h1>
            <p>Iniciá sesión para continuar en Saint Hub</p>
        </div>

        <form asp-controller="Account"
              asp-action="Login"
              method="post"
              class="account-form">

            @Html.AntiForgeryToken()

            <div class="field">
                <label>Correo electrónico</label>
                <input type="email" name="email" placeholder="correo@ejemplo.com" required />
            </div>

            <div class="field">
                <label>Contraseña</label>
                <input type="password" name="password" placeholder="••••••••" required />
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="account-error">@ViewBag.Error</div>
            }

            <button type="submit" class="btn-account-primary">
                Iniciar sesión
            </button>
        </form>

        <div class="account-divider">
            <span>o</span>
        </div>

        <a asp-controller="Account" asp-action="GoogleLogin" class="btn-google">
            <span class="google-icon">
                <svg viewBox="0 0 533.5 544.3">
                    <path fill="#4285F4" d="M533.5 278.4c0-17.4-1.4-34.1-4.1-50.4H272v95.3h146.9c-6.3 34-25 62.8-53.3 82v68h86.2c50.5-46.5 81.7-115.1 81.7-194.9z" />
                    <path fill="#34A853" d="M272 544.3c72.6 0 133.6-24 178.1-65.2l-86.2-68c-24 16.1-54.7 25.7-91.9 25.7-70.6 0-130.5-47.7-151.9-111.8h-89.9v70.4C73.8 475.2 166.9 544.3 272 544.3z" />
                    <path fill="#FBBC04" d="M120.1 325c-10.4-30.8-10.4-64.1 0-94.9V159.7h-89.9C7.4 211.4 0 241.7 0 272s7.4 60.6 30.2 112.3l89.9-59.3z" />
                    <path fill="#EA4335" d="M272 107.7c39.5-.6 77.5 14.3 106.5 41.6l79.6-79.6C411.6 24.7 344.6-1 272 0 166.9 0 73.8 69.1 30.2 159.7l89.9 70.4C141.5 155.4 201.4 107.7 272 107.7z" />
                </svg>
            </span>
            <span>Continuar con Google</span>
        </a>

        <div class="account-foot">
            <span>¿No tenés cuenta?</span>
            <a asp-action="Register">Crear cuenta</a>
        </div>

        <div class="account-foot secondary">
            <a asp-action="ForgotPassword">¿Olvidaste tu contraseña?</a>
        </div>

    </div>
</div>


<!-- =========================
     LOGIN – MOBILE
========================== -->
