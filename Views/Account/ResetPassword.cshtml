@{
    ViewData["Title"] = "Restablecer contraseña";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Account.css" asp-append-version="true" />
}

<div class="account-wrapper">

    <div class="account-card">

        <!-- HEADER -->
        <div class="account-head">
            <h1>Nueva contraseña</h1>
            <p>
                Creá una nueva contraseña para acceder nuevamente a tu cuenta
            </p>
        </div>

        <!-- RESET FORM -->
        <form asp-controller="Account"
              asp-action="ResetPassword"
              method="post"
              class="account-form">

            @Html.AntiForgeryToken()

            <!-- TOKEN -->
            <input type="hidden" name="token" value="@ViewBag.Token" />

            <div class="field">
                <label>Nueva contraseña</label>
                <input type="password"
                       name="password"
                       placeholder="••••••••"
                       required />
            </div>

            <button type="submit" class="btn-account-primary">
                Cambiar contraseña
            </button>
        </form>

        <!-- FOOT -->
        <div class="account-foot">
            ¿Recordaste tu contraseña?
            <a asp-action="Login">Volver a iniciar sesión</a>
        </div>

    </div>

</div>
