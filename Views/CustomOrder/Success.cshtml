@{
    ViewData["Title"] = "Solicitud enviada";
}

@section Styles {
    <style>
        /* =========================
           SUCCESS – PEDIDO ESPECIAL
        ========================= */

        .custom-success-wrap {
            min-height: calc(100vh - 140px);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 3.5rem 1.5rem;
        }

        .custom-success-card {
            max-width: 720px;
            width: 100%;
            background: linear-gradient(
                180deg,
                rgba(255,255,255,.045),
                rgba(255,255,255,.015)
            );
            border: 1px solid rgba(255,255,255,.08);
            border-radius: 28px;
            padding: 3rem 2.75rem;
            text-align: center;
            animation: fadeUp .65s ease;
        }

        /* ICON */

        .custom-success-icon {
            width: 68px;
            height: 68px;
            border-radius: 50%;
            background: #ffd166;
            color: #111;
            font-size: 2rem;
            font-weight: 700;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.75rem;
        }

        /* HEADER */

        .custom-success-eyebrow {
            display: inline-block;
            font-size: .75rem;
            letter-spacing: .16em;
            text-transform: uppercase;
            color: #ffd166;
            margin-bottom: .6rem;
        }

        .custom-success-title {
            font-size: clamp(1.9rem, 3vw, 2.5rem);
            margin-bottom: 1rem;
        }

        .custom-success-text {
            color: rgba(255,255,255,.75);
            line-height: 1.7;
            max-width: 62ch;
            margin: 0 auto 2.2rem;
        }

        /* STEPS */

        .custom-success-steps {
            text-align: left;
            background: rgba(255,255,255,.03);
            border-radius: 20px;
            padding: 1.75rem 1.75rem;
            margin-bottom: 1.6rem;
        }

        .custom-success-steps h3 {
            font-size: 1rem;
            margin-bottom: .75rem;
        }

        .custom-success-steps ul {
            margin: 0;
            padding-left: 1.2rem;
            color: rgba(255,255,255,.75);
        }

        .custom-success-steps li {
            margin-bottom: .45rem;
        }

        /* NOTE */

        .custom-success-note {
            font-size: .9rem;
            color: rgba(255,255,255,.65);
            margin-bottom: 2.3rem;
        }

        /* ACTIONS */

        .custom-success-actions {
            display: flex;
            gap: 1rem;
            justify-content: center;
            flex-wrap: wrap;
        }

        .custom-success-id {
            margin-bottom: 1.2rem;
            font-size: .95rem;
            color: rgba(255,255,255,.65);
        }

        /* ANIMATION */

        @@keyframes fadeUp {
            from {
                opacity: 0;
                transform: translateY(18px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* RESPONSIVE */

        @@media (max-width: 640px) {
            .custom-success-card {
                padding: 2.25rem 1.75rem;
            }
        }
    </style>
}

<section class="custom-success-wrap">

    <div class="custom-success-card">

        <!-- ICON -->
        <div class="custom-success-icon">✓</div>

        <!-- HEADER -->
        <span class="custom-success-eyebrow">
            Pedido especial recibido
        </span>
        <div class="custom-success-id">
            Solicitud <strong>#@ViewBag.RequestId</strong>
        </div>

        <h1 class="custom-success-title">
            Hemos recibido tu solicitud
        </h1>

        <p class="custom-success-text">
            Tu pedido personalizado fue enviado correctamente.
            Nuestro equipo revisará los detalles del producto y se pondrá
            en contacto contigo para confirmar precio y disponibilidad.
        </p>

        <!-- STEPS -->
        <div class="custom-success-steps">
            <h3>¿Qué sigue ahora?</h3>
            <ul>
                <li>Revisamos la información del producto</li>
                <li>Validamos disponibilidad con proveedores</li>
                <li>Te contactamos para cotización</li>
                <li>Confirmas si deseas continuar</li>
            </ul>
        </div>

        <!-- NOTE -->
        <div class="custom-success-note">
            Este pedido <strong>no genera un cobro automático</strong>.
            El proceso continúa únicamente cuando confirmes la cotización.
        </div>

        <!-- ACTIONS -->
        <div class="custom-success-actions">
            <a asp-controller="Shop"
               asp-action="Index"
               class="btn-saint-outline">
                Volver al catálogo
            </a>

            <a href="https://wa.me/50671270397?text=@ViewBag.WhatsappMessage"
               target="_blank"
               class="btn-saint highlight">
                Contactarnos por WhatsApp
            </a>

        </div>

    </div>

</section>
