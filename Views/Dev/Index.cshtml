    <script>
        (() => {
          const root = document.getElementById("devRoot");
          const spot = document.getElementById("spotlight");
          const toast = document.getElementById("toast");
          const copyBtn = document.getElementById("copyEmailBtn");
               const reduced = !document.body.classList.contains("force-motion")
        && window.matchMedia("(prefers-reduced-motion: reduce)").matches;


          // Spotlight
          if (!reduced && root && spot) {
            let raf = null;
            root.addEventListener("mousemove", (e) => {
              if (raf) return;
              raf = requestAnimationFrame(() => {
                const r = root.getBoundingClientRect();
                spot.style.setProperty("--x", (e.clientX - r.left) + "px");
                spot.style.setProperty("--y", (e.clientY - r.top) + "px");
                raf = null;
              });
            }, { passive: true });
          }

          // Reveal
          const reveals = document.querySelectorAll(".reveal");
          if (!reduced && "IntersectionObserver" in window) {
            const io = new IntersectionObserver((entries) => {
              entries.forEach(en => {
                if (!en.isIntersecting) return;
                en.target.classList.add("is-in");
                io.unobserve(en.target);
              });
            }, { threshold: 0.12 });
            reveals.forEach(el => io.observe(el));
          } else {
            reveals.forEach(el => el.classList.add("is-in"));
          }

          // Tilt
          const tilts = document.querySelectorAll(".dv-tilt");
          if (!reduced) {
            tilts.forEach(card => {
              let rect = null;
              card.addEventListener("mouseenter", () => { rect = card.getBoundingClientRect(); card.classList.add("tilting"); });
              card.addEventListener("mouseleave", () => { card.classList.remove("tilting"); card.style.setProperty("--rx","0deg"); card.style.setProperty("--ry","0deg"); rect = null; });
              card.addEventListener("mousemove", (e) => {
                rect = rect || card.getBoundingClientRect();
                const x = (e.clientX - rect.left) / rect.width;
                const y = (e.clientY - rect.top) / rect.height;
                card.style.setProperty("--rx", ((0.5 - y) * 10).toFixed(2) + "deg");
                card.style.setProperty("--ry", ((x - 0.5) * 12).toFixed(2) + "deg");
              });
            });
          }

          // Magnetic
          document.querySelectorAll("[data-magnetic] .dv-btn").forEach(btn => {
            if (reduced) return;
            let r=null;
            btn.addEventListener("mousemove",(e)=>{
              r=r||btn.getBoundingClientRect();
              const dx=(e.clientX-(r.left+r.width/2))/r.width;
              const dy=(e.clientY-(r.top+r.height/2))/r.height;
              btn.style.transform=`translate(${dx*10}px, ${dy*8}px)`;
            });
            btn.addEventListener("mouseleave",()=>{ btn.style.transform=""; r=null; });
          });

          // Toast
          const showToast = () => {
            if (!toast) return;
            toast.classList.add("show");
            clearTimeout(window.__dvToastT);
            window.__dvToastT = setTimeout(() => toast.classList.remove("show"), 1600);
          };

          if (copyBtn) {
            copyBtn.addEventListener("click", async () => {
              const value = copyBtn.getAttribute("data-copy") || "";
              try { await navigator.clipboard.writeText(value); showToast(); }
              catch { showToast(); }
            });
          }

          // Counters
          document.querySelectorAll(".count[data-count]").forEach(el=>{
            if (reduced) { el.textContent = el.getAttribute("data-count") || "0"; return; }
            const target = parseInt(el.getAttribute("data-count")||"0",10);
            const start = performance.now();
            const dur = 1100;
            const tick = (t) => {
              const p = Math.min(1,(t-start)/dur);
              const eased = 1 - Math.pow(1-p,3);
              el.textContent = Math.round(target*eased);
              if (p<1) requestAnimationFrame(tick);
            };
            requestAnimationFrame(tick);
          });
                  // ✅ Forzar reveal inicial (entrada al cargar)
        window.addEventListener("load", () => {
          requestAnimationFrame(() => {
            document.querySelectorAll(".reveal").forEach((el, i) => {
              el.style.setProperty("--d", (i * 80) + "ms");
              el.classList.add("is-in");
            });
          });
        });

        })();
    </script>

