    <script>
        function updateCartCount(count) {
            document.querySelectorAll('.cart-count').forEach(el => {
                if (count > 0) {
                    el.textContent = count;
                    el.style.display = 'inline-flex';
                } else {
                    el.style.display = 'none';
                }
            });
        }
    </script>


    <script>
        const openBtn = document.getElementById("openMenu");
        const closeBtn = document.getElementById("closeMenu");
        const menu = document.getElementById("mobileMenu");

        if (openBtn && closeBtn && menu) {
            openBtn.addEventListener("click", () => {
                menu.classList.add("open");
                document.body.style.overflow = "hidden";
            });

            closeBtn.addEventListener("click", () => {
                menu.classList.remove("open");
                document.body.style.overflow = "";
            });
        }
    </script>
    <script>
        document.querySelectorAll('.mobile-category-toggle').forEach(toggle => {
            toggle.addEventListener('click', () => {
                const parent = toggle.closest('.mobile-category');

                // Cerrar otros (opcional pero recomendado)
                document.querySelectorAll('.mobile-category').forEach(cat => {
                    if (cat !== parent) cat.classList.remove('open');
                });

                parent.classList.toggle('open');
            });
        });
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", () => {

            const input = document.querySelector('.saint-search');
            const preview = document.getElementById('searchPreview');

            if (!input || !preview) return;

            let timeout = null;

            input.addEventListener('input', () => {
                const q = input.value.trim();
                clearTimeout(timeout);

                if (q.length < 2) {
                    preview.classList.remove('open');
                    return;
                }

                timeout = setTimeout(async () => {
                    const res = await fetch(`/Category/SearchPreview?q=${encodeURIComponent(q)}`);
                    const data = await res.json();

                    if (!data.length) {
                        preview.classList.remove('open');
                        return;
                    }

                    preview.innerHTML = `
                        ${data.map(p => `
                            <div class="search-preview-item"
                                 onclick="window.location='/Shop/Details/${p.id}'">
                                <img src="${p.image}" />
                                <div class="search-preview-info">
                                    <span>${p.name}</span>
                                    <small>₡ ${p.priceCrc.toLocaleString()}</small>
                                </div>
                            </div>
                        `).join('')}
                        <div class="search-preview-footer">
                            <a href="/Category?q=${encodeURIComponent(q)}">
                                Ver todos los resultados
                            </a>
                        </div>
                    `;

                    preview.classList.add('open');

                }, 300);
            });

            document.addEventListener('click', e => {
                if (!e.target.closest('.saint-search-wrapper')) {
                    preview.classList.remove('open');
                }
            });

        });
    </script>
